{
  "name": "pokedex-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "npm run codegen",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.mdx",
    "format": "prettier --write .",
    "test": "cypress open --component -b chrome",
    "test:e2e": "cypress open --e2e",
    "codegen": "graphql-codegen --config codegen.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/client": "^3.12.4",
    "@apollo/experimental-nextjs-app-support": "^0.11.7",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql": "^16.10.0",
    "lucide-react": "^0.469.0",
    "next": "14.2.22",
    "next-themes": "^0.4.4",
    "react": "^18",
    "react-dom": "^18",
    "react-render-if-visible": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/client-preset": "4.5.1",
    "@simonsmith/cypress-image-snapshot": "^9.1.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/cypress": "^10.0.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cypress": "^13.17.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.22",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "postcss": "^8",
    "prettier": "3.4.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "*.{js,ts,jsx,tsx,css,scss,md,mdx}": "prettier --write"
  }
}
